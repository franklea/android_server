<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.cs.dao.mapper.SolutionMapper">
    <resultMap type="com.cs.dao.model.SolutionPO" id="solution">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="info" property="info" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="pic" property="pic" jdbcType="VARCHAR"/>
    </resultMap>
	<select id="getType" resultMap="solution">
	    SELECT id,name
	    	FROM SOLUTION
	</select>
	<select id="getLogo" resultType="HashMap">
	    SELECT content as picPath,subcontent as picLink
	    	FROM WEBINFO
	    WHERE type = 2
	    	LIMIT 1
	</select>
	<update id="setLogo">
	    UPDATE WEBINFO
	    <set>
	        <if test="pic!=null and pic!=''"> content=#{pic}, </if>
	        <if test="link!=null and link!=''"> subcontent=#{link}, </if>
	    </set>
	    WHERE type = 2
	</update>
	<insert id="insertSolution" parameterType="com.cs.dao.model.SolutionPO">
	    INSERT INTO
	    	 SOLUTION(name,info,content,pic)
	    VALUES(#{name},#{info},#{content},#{pic})
	</insert>
	<delete id="delSolution">
	    DELETE FROM
	    	SOLUTION
	    WHERE id = #{id}
	</delete>
	<select id="getSolution" parameterType="int" resultMap="solution">
	    SELECT *
	    	FROM SOLUTION
	    WHERE id = #{id}
	</select>
	<update id="updateSolution" parameterType="com.cs.dao.model.SolutionPO">
	    UPDATE SOLUTION
	    <set>
	        <if test="name!=null and name!=''">name=#{name},</if>
	        <if test="info!=null and info!=''">info=#{info},</if>
	        <if test="content!=null and content!=''">content=#{content},</if>
	        <if test="pic!=null and pic!=''">pic=#{pic},</if>
	    </set>
	    WHERE id=#{id}
	</update>
	<select id="searchSolution"  parameterType="HashMap" resultMap="solution">
	    SELECT id,name,info
	    	FROM SOLUTION
	    <where>
	        <if test="basic!=null and basic!=''">
                and name like #{basic}
            </if>
            <if test="part!=null and part!=''">
                and (name like #{part} or info like #{part})
            </if>
            <if test="all!=null and all!=''">
                and (name like #{all} or info like #{all} or content like #{all})
            </if>
	    </where>
	   		LIMIT #{offset},#{limit}
	</select>
	<select id="getCount" parameterType="HashMap" resultType="int">
        SELECT COUNT(*)
        	FROM SOLUTION
	    <where>
	        <if test="basic!=null and basic!=''">
                and name like #{basic}
            </if>
            <if test="part!=null and part!=''">
                and (name like #{part} or info like #{part})
            </if>
            <if test="all!=null and all!=''">
                and (name like #{all} or info like #{all} or content like #{all})
            </if>
	    </where>
    </select>
	<select id="getPic" resultType="HashMap">
	    SELECT content as picPath,subcontent as picLink
	    	FROM WEBINFO
	    WHERE type = 7
	    	LIMIT 1
	</select>
	<update id="setPic" parameterType="HashMap">
	    UPDATE WEBINFO
	    <set>
	        <if test="pic!=null and pic!=''"> content=#{pic},</if>
	        <if test="link!=null and link!=''"> subcontent=#{link}, </if>
	    </set>
	    WHERE type = 7
	</update>
</mapper>