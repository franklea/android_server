<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cs.dao.mapper.PageMapper">

    <insert id="addPage" parameterType="HashMap">
        INSERT INTO
        	PAGEMODEL(name,content)
        VALUES(#{name},#{content})
    </insert>
    <update id="updatePage" parameterType="HashMap">
        UPDATE PAGEMODEL
        	<set>
        	    <if test="content!=null and content!=''"> content=#{content},</if>
        	</set>
        WHERE id = #{id}
    </update>
    <delete id="delPage" parameterType="int">
        DELETE FROM
        	PAGEMODEL
        WHERE id = #{id}
    </delete>
    <select id="getPage" parameterType="int" resultType="HashMap">
        SELECT *
        	FROM PAGEMODEL
        WHERE id = #{id}
    </select>
	<select id="searchPage" parameterType="String" resultType="HashMap">
	    SELECT id,name
	    	FROM PAGEMODEL
	    WHERE name=#{name}
	    	LIMIT 1
	</select>
</mapper>