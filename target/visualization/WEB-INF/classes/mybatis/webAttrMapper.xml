<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cs.dao.mapper.WebAttrMapper">
    <select id="getLogo" resultType="HashMap">
        SELECT content as picPath,subcontent as picLink
        	FROM WEBINFO
        WHERE type=0
        	LIMIT 1
    </select>
    <update id="setLogo" >
        UPDATE WEBINFO
        	SET content=#{path},subcontent=#{link}
        WHERE type = 0
    </update>
    <insert id="addTitlePic">
        INSERT INTO
        	WEBINFO(type,content,subcontent)
        VALUES(1,#{path},#{link})
    </insert>
    <update id="setPic" parameterType="HashMap">
        UPDATE WEBINFO
        	<set>
        	    <if test="path!=null and path!=''">content=#{path},</if>
        	    <if test="link!=null and link!=''">subcontent=#{link},</if>
        	</set>
        WHERE id = #{id}
    </update>
    <delete id="delPic" parameterType="Integer">
        DELETE FROM 
        	WEBINFO
        WHERE id = #{id}
    </delete>
    <select id="getTitlePic" resultType="HashMap">
        SELECT id as picId,content as picPath,subcontent as picLink
        	FROM WEBINFO
        WHERE type=1
    </select>
    <insert id="addBasePic">
        INSERT INTO
        	WEBINFO(type,content,subcontent)
        VALUES(5,#{path},#{link})
    </insert>
    <select id="getBasePic" resultType="HashMap">
        SELECT id as picId,content as picPath,subcontent as picLink
        	FROM WEBINFO
        WHERE type=5
    </select>
    <select id="getCompanyInfo" resultType="HashMap">
        SELECT id,content as name,subcontent as content
        	FROM WEBINFO
        WHERE id = #{id}
    </select>
    <select id="getInfoName" resultType="HashMap">
        SELECT id,content as name
        	FROM WEBINFO
        WHERE type = 6
    </select>
    <update id="setCompanyInfo" parameterType="HashMap">
        UPDATE WEBINFO
        <set>
	        <if test="name!=null and name!=''">content=#{name},</if>
	        <if test="content!=null and content!=''">subcontent=#{content},</if>
	    </set>
	    WHERE id = #{id}
    </update>
    <insert id="addCompanyInfo" parameterType="HashMap">
        INSERT INTO
        	WEBINFO(type,content,subcontent)
        VALUES(6,#{name},#{content})
    </insert>
    <delete id="delCompanyInfo" parameterType="int">
        DELETE FROM
        	WEBINFO
        WHERE id = #{id}
    </delete>
    <select id="getJobLogo" resultType="HashMap">
        SELECT content as picPath,subcontent as picLink
        	FROM WEBINFO
        WHERE type = 10
        	LIMIT 1
    </select>
    <update id="setJobLogo" parameterType="HashMap">
        UPDATE WEBINFO
        	<set>
        	    <if test="path!=null and path!=''">content=#{path},</if>
        	    <if test="link!=null and link!=''">subcontent=#{link},</if>
        	</set>
        WHERE type = 10
    </update>
    <select id="getFriend" resultType="String">
        SELECT content
        	FROM WEBINFO
        WHERE type = 11
        	LIMIT 1
    </select>
    <update id="setFriend" parameterType="String">
        UPDATE WEBINFO
        	<set>
        	    <if test="_parameter!=null and _parameter!=''">content=#{_parameter},</if>
        	</set>
        WHERE type = 11
    </update>
    <select id="getCopyRight" resultType="String">
        SELECT content
        	FROM WEBINFO
        WHERE type = 12
        	LIMIT 1
    </select>
    <update id="setCopyRight" parameterType="String">
        UPDATE WEBINFO
        	<set>
        	    <if test="_parameter!=null and _parameter!=''">content=#{_parameter},</if>
        	</set>
        WHERE type = 12
    </update>
    <select id="getPrivacy" resultType="String">
        SELECT content
        	FROM WEBINFO
        WHERE type = 13
        	LIMIT 1
    </select>
    <update id="setPrivacy" parameterType="String">
        UPDATE WEBINFO
        	<set>
        	    <if test="_parameter!=null and _parameter!=''">content=#{_parameter},</if>
        	</set>
        WHERE type = 13
    </update>
    <select id="getWeibo" resultType="String">
        SELECT content
        	FROM WEBINFO
        WHERE type = 14
        	LIMIT 1
    </select>
    <update id="setWeibo" parameterType="String">
        UPDATE WEBINFO
        	<set>
        	    <if test="_parameter!=null and _parameter!=''">content=#{_parameter},</if>
        	</set>
        WHERE type = 14
    </update>
    <select id="getCloud" resultType="HashMap">
        SELECT content,subcontent as link
        	FROM WEBINFO
        WHERE type = 15
        	LIMIT 1
    </select>
     <update id="setCloud" parameterType="HashMap">
        UPDATE WEBINFO
        	<set>
        	    <if test="content!=null and content!=''">content=#{content},</if>
        	    <if test="link!=null and link!=''">subcontent=#{link},</if>
        	</set>
        WHERE type = 15
    </update>
    <select id="getContact" resultType="String">
        SELECT content
        	FROM WEBINFO
        WHERE type = 16
        	LIMIT 1
    </select>
    <update id="setContact" parameterType="String">
        UPDATE WEBINFO
        	<set>
        	    <if test="_parameter!=null and _parameter!=''">content=#{_parameter},</if>
        	</set>
        WHERE type = 16
    </update>
    <select id="getPic" parameterType="int" resultType="HashMap">
        SELECT id as picId,content as picPath,subcontent as picLink
        	FROM WEBINFO
        WHERE id=#{id}
    </select>
</mapper>