<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.cs.dao.mapper.NewsMapper">
	<resultMap type="com.cs.dao.model.NewsPO" id="news">
	    <result column="id" property="id" jdbcType="INTEGER"/>
	    <result column="title" property="title" jdbcType="VARCHAR"/>
	    <result column="info" property="info" jdbcType="VARCHAR"/>
	    <result column="content" property="content" jdbcType="VARCHAR"/>
	    <result column="date" property="date" jdbcType="VARCHAR"/>
	    <result column="type" property="type" jdbcType="INTEGER"/>
	</resultMap>
	<insert id="insertType" parameterType="HashMap">
	    INSERT INTO
	    	NEWSTYPE(name)
	    VALUES(#{name})
	</insert>
	<update id="updateType" parameterType="HashMap">
	    UPDATE NEWSTYPE
	    	SET name=#{name}
	    WHERE id = #{id}
	</update>
	<select id="getType" parameterType="int" resultType="HashMap">
	    SELECT *
	    	FROM NEWSTYPE
	    WHERE id = #{id}
	</select>
	<select id="getTypes" resultType="HashMap">
	    SELECT *
	    	FROM NEWSTYPE
	</select>
	<delete id="delType">
	    DELETE FROM
	    	NEWSTYPE
	    WHERE id = #{id}
	</delete>
	<insert id="insertNews" parameterType="com.cs.dao.model.NewsPO">
	    INSERT INTO 
	    	NEWS(title,info,content,date,type)
	    VALUES(#{title},#{info},#{content},#{date},#{type})
	</insert>
	<update id="updateNews" parameterType="com.cs.dao.model.NewsPO">
	    UPDATE NEWS
	    <set>
	        <if test="title!=null and title!=''">title=#{title},</if>
	        <if test="info!=null and info!=''">info=#{info},</if>
	        <if test="content!=null and content!=''">content=#{content},</if>
	        <if test="date!=null and date!=''">date=#{date},</if>
	        <if test="type!=null">type=#{type},</if>
	    </set>
	    WHERE id=#{id}
	</update>
	<delete id="deleteNews">
	    DELETE FROM 
	    	NEWS
	    WHERE id = #{id}
	</delete>
	<select id="searchNews" parameterType="HashMap" resultMap="news">
	    SELECT id,title,info,date,type
	    	FROM NEWS
	    <where>
	        <if test="type!=null">
	            type=#{type}
	        </if>
	        <if test="basic!=null and basic!=''">
                and title like #{basic}
            </if>
            <if test="part!=null and part!=''">
                and (title like #{part} or info like #{part})
            </if>
            <if test="all!=null and all!=''">
                and (title like #{all} or info like #{all} or content like #{all})
            </if>
	    </where>
	    ORDER BY id desc
	   		LIMIT #{offset},#{limit}    
	</select>
	<select id="getCount" parameterType="HashMap" resultType="int">
        SELECT COUNT(*)
        	FROM NEWS
	    <where>
	        <if test="type!=null">
	            type=#{type}
	        </if>
	        <if test="basic!=null and basic!=''">
                and title like #{basic}
            </if>
            <if test="part!=null and part!=''">
                and (title like #{part} or info like #{part})
            </if>
            <if test="all!=null and all!=''">
                and (title like #{all} or info like #{all} or content like #{all})
            </if>
	    </where>
    </select>
	<select id="getOneNews" resultMap="news">
	    SELECT *
	    	FROM NEWS
	    WHERE id = #{id}
	</select>
</mapper>