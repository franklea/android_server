<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cs.dao.mapper.UserMapper">
    <resultMap type="com.cs.dao.model.UserPO" id="user">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="mail" property="mail" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="admin" property="admin" jdbcType="INTEGER"/>
    </resultMap>
    <insert id="insertUser" parameterType="com.cs.dao.model.UserPO">
        INSERT INTO
        	USER(mail,password,admin)
        VALUES(#{mail},#{password},#{admin})
    </insert>
    <update id="updateUser" parameterType="com.cs.dao.model.UserPO">
        UPDATE USER
        <set>
            <if test="mail!=null and mail!=''">mail=#{mail},</if>
            <if test="password!=null and password!=''">password=#{password},</if>
            <if test="admin!=null and admin!=''">admin=#{admin},</if>
        </set>
        WHERE id = #{id}
    </update>
    <delete id="delUser">
        DELETE FROM
        	USER
        WHERE id = #{id}
    </delete>
    <select id="getUser" parameterType="HashMap" resultMap="user">
        SELECT *
        	FROM USER
        <where>
            <if test="id!=null">id=#{id}</if>
            <if test="mail!=null">and mail=#{mail}</if>
        </where>
        LIMIT 1
    </select>
    <select id="getUsers" parameterType="HashMap" resultMap="user">
        SELECT * 
        	FROM USER
        <where>
            <if test="key!=null and key!=''">mail like #{key}</if>
			<if test="admin!=null and admin!=''">and admin = #{admin}</if>
        </where>
        LIMIT #{offset},#{limit}
    </select>
</mapper>