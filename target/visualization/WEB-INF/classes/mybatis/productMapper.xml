<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.cs.dao.mapper.ProductMapper">
    <resultMap type="com.cs.dao.model.ProductPO" id="product">
        <result column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="info" property="info" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="pic" property="pic" jdbcType="VARCHAR"/>
        <result column="shown" property="shown" jdbcType="VARCHAR"/>
    </resultMap>
	<select id="getName" resultMap="product">
	    SELECT id ,name
	    	FROM PRODUCT
	</select>
	<select id="getInfo" resultMap="product">
	    SELECT id ,name,info
	    	FROM PRODUCT
	    WHERE shown = 1
	</select>
	<select id="searchProduct" parameterType="HashMap" resultMap="product">
	    SELECT id,name,info,shown
	    	FROM PRODUCT
	    <where>
	    	<if test="basic!=null and basic!=''">
                and name like #{basic}
            </if>
            <if test="part!=null and part!=''">
                and (name like #{part} or info like #{part})
            </if>
            <if test="all!=null and all!=''">
                and (name like #{all} or info like #{all} or content like #{all})
            </if>
	    </where>
	   		LIMIT #{offset},#{limit}
	</select>
	<select id="getCount" parameterType="HashMap" resultType="int">
        SELECT COUNT(*)
        	FROM PRODUCT
	    <where>
	    	<if test="basic!=null and basic!=''">
                and name like #{basic}
            </if>
            <if test="part!=null and part!=''">
                and (name like #{part} or info like #{part})
            </if>
            <if test="all!=null and all!=''">
                and (name like #{all} or info like #{all} or content like #{all})
            </if>
	    </where>
    </select>
	<select id="getOneProduct" resultMap="product">
	    SELECT * 
	    	FROM PRODUCT
	    WHERE id = #{id}
	</select>
	<update id="updateProduct" parameterType="com.cs.dao.model.ProductPO">
	    UPDATE PRODUCT
	    <set>
	        <if test="name!=null and name!=''">name=#{name},</if>
	        <if test="info!=null and info!=''">info=#{info},</if>
	        <if test="content!=null and content!=''">content=#{content},</if>
	        <if test="pic!=null and pic!=''">pic=#{pic},</if>
	        <if test="shown!=null">shown=#{shown},</if>
	    </set>
		WHERE id = #{id}
	</update>
	<insert id="insertProduct" parameterType="com.cs.dao.model.ProductPO">
	    INSERT INTO 
	    	PRODUCT(id,name,info,content,pic,shown)
	    VALUES(#{id},#{name},#{info},#{content},#{pic},#{shown})
	</insert>
	<delete id="delProduct">
	    DELETE FROM 
	    	PRODUCT
	    WHERE id = #{id}
	</delete>
	<select id="getLogo" resultType="HashMap">
	    SELECT content as picPath,subcontent as picLink
	    	FROM WEBINFO
	    WHERE type = 3
	    	LIMIT 1
	</select>
	<update id="setLogo" parameterType="HashMap">
	    UPDATE WEBINFO
	    <set>
	        <if test="pic!=null and pic!=''"> content=#{pic}, </if>
	        <if test="link!=null and link!=''"> subcontent=#{link}, </if>
	    </set>
	    WHERE type = 3
	</update>
	<select id="getPic" resultType="HashMap">
	    SELECT content as picPath,subcontent as picLink
	    	FROM WEBINFO
	    WHERE type = 8
	    	LIMIT 1
	</select>
	<update id="setPic" parameterType="HashMap">
	    UPDATE WEBINFO
	    <set>
	        <if test="pic!=null and pic!=''"> content=#{pic}, </if>
	        <if test="link!=null and link!=''"> subcontent=#{link}, </if>
	    </set>
	    WHERE type = 8
	</update>
	<update id="setShown" parameterType="int">
	    UPDATE PRODUCT
	    	SET shown = 1-shown
	    WHERE id = #{id}
	</update>
</mapper>