<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" /><meta http-equiv="Cache-control" content="private"/>  
<link type="text/css" rel="stylesheet" href="/css/webcss.css"/>
<title>中冶赛迪重庆信息技术有限公司</title>
</head>
<body>
<div class="main">
    #parse("header.vm")
    <!--无图无真相-->
    <div style="clear:both"></div>
    <div id="pic_div" >
        <div id="pic_list">
            <div id="pic_text">
                <ul>
                    #foreach($index in [1..${data.get("picList").size()}])  
                        <li name="$index"></li>
                    #end
                </ul>
            </div>
                <ul id="pic_list_ul" >
                
                    #foreach($picmap in ${data.get("picList")})  
                        <li style="float:left"><a  href="${picmap.get("picLink")}" target="_blank"><img src="${picmap.get("picPath")}" /></a></li> 
                    #end
                    
                </ul>
            <div style="clear:both;"></div>
            <img src="/img/homepicdown_03.png" style="float:left;margin:0;height:29px;">
        </div>
        
    </div>
    
    <!--新闻-->
    
    <div class="news_box">
        <span class="news_head"> 
            <a href="/news/index/0/1"><img  src="/img/newsfont_03.png"></a>
        </span>
        <div class="news_div">
            <ul class="news_ul">
                
                #foreach($entity in ${data.get("newsList")})  
                    <li><a class="news_li" href="${entity.get("link")}" >${entity.get("title")}<span class="news_span">${entity.get("date")}</span></a></li> 
                #end
               
            </ul>
        </div>
        <div style="clear:both"></div>
    </div>
    
    <!--行业解决方案，产品与平台，服务-->
    <div style="clear:both;"></div>
    <div>
        <!--行业解决方案-->
        <div class="spps">
            <div class="spps_pic">
                <img class="spps_img" src="${data.get("solution").get("pic").get("picPath")}">
            </div>
            <div class="spps_title">
                <a class="spps_titlec" href="/solution/index/1">行业解决方案<span class="spps_titlec_e">Solutions</span></a>
            </div>
            <div class="spps_links">
                <ul class="spps_ul">
                    #foreach($entity in ${data.get("solution").get("solutionList")})
                            <li class="spps_li"><img class="bigbig" src="/img/bigbig.png"><a href="${entity.get("link")}">${entity.get("name")}</a></li>
                    #end
                </ul>
            </div >
            <div style="clear:both"></div>
            <div class="spps_more">
                <a class="spps_img_more" style="margin:0;padding:0" href="/solution/index/1"><img class="spps_img_more" src="/img/morepic.png"></a>
                <div style="clear:both"></div>
            </div>
            <div style="clear:both"></div>
        </div>
        <!--产品与平台-->
        <div class="spps" style="margin-left:16px;">
            <div class="spps_pic">
                <img class="spps_img" src="${data.get("product").get("pic").get("picPath")}">
            </div>
            <div class="spps_title">
                <a class="spps_titlec" href="/product/index/1">产品与平台<span class="spps_titlec_e">Product</span></a>
            </div>
            <div class="spps_pro_box">
                <ul id="spps_pro_ul" style="margin:0;padding:0;width:10000px;">
                    
                        
                        <li class="spps_pro_li">
                            <div class="spps_links_p">
                                <a href="${data.get("product").get("link")}"><span class="spps_sub_title" >${data.get("product").get("name")}</span></a>
                                <div style="clear:both"></div>
                                <p class="spps_pro_p">
                                    ${data.get("product").get("info")}
                                    <a href="${data.get("product").get("link")}"><img src="/img/delta.png"></a>
                                </p>
                            </div >
                            <div style="clear:both"></div>
                            <div class="spps_more">
                                <a class="spps_img_more" style="margin:0;padding:0" href="/product/index/1"><img class="spps_img_more" src="/img/morepic.png"></a>
                                <div style="clear:both"></div>
                            </div>
                            <div style="clear:both"></div>
                        </li>
                        
            

                </ul>
                <div style="clear:both"></div>
            </div>
            
        </div>
        
        <!--服务-->
        <div class="spps" style="margin-left:16px;">
            <div class="spps_pic">
                <img class="spps_img" src="${data.get("service").get("pic").get("picPath")}">
            </div>
            <div class="spps_title">
                <a class="spps_titlec" href="/service/index/0/1">服务<span class="spps_titlec_e">Services</span></a>
            </div>
            <div class="spps_links">
                <ul class="spps_ul" style="margin-top:14px;">
                    
                    #foreach($entity in ${data.get("service").get("serviceList")})    
                        
                        <li class="spps_li_service">
                            <div>
                                <div class="spps_li_div"><a href="${entity.get("link")}"> ${entity.get("name")} </a></div>
                                <div class="spps_service_btn">
                                    <img class="spps_togglebtn" src="/img/close.JPG">
                                </div>
                                <div style="clear:both"></div>
                            </div>
                            <p class="spps_toggle" >${entity.get("info")}<a href="${entity.get("link")}"><img src="/img/delta.png"></a></p>
                        </li>
                                            
                    #end
                    
                    
                </ul>
            </div >
            <div style="clear:both"></div>
            <div class="spps_more">
                <a class="spps_img_more" style="margin:0;padding:0" href="/service/index/0/1"><img class="spps_img_more" src="/img/morepic.png"></a>
                <div style="clear:both"></div>
            </div>
            <div style="clear:both"></div>
        </div>
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
    <div>
        <!--案例-->
        <div class="example_box">
            <div class="example_titlebox">
                <div class="examples_title">
                    <img style="margin-left:20px;margin-top:8px;float:left;" src="/img/case.jpg">
                    <span class="example_case">客户案例</span>
                </div>
            </div>
            <div style="clear:both"></div>
            <div class="example_contentsbox" style="width:646px;">
                
                #foreach($entity in ${data.get("case")}) 
                    
                    <div class="example_onebox">
                        <div class="example_imgbox">
                            <img src="${entity.get("face")}">
                        </div>
                        <div class="example_contentbox">
                            <a class="example_title" href="${entity.get("link")}">${entity.get("name")}</a>
                            <div style="clear:both"></div>
                            <p class="example_content">${entity.get("info")} <a href="${entity.get("link")}"><img src="/img/delta.png"></a></p>
                        </div>
                        <div style="clear:both"></div>
                    </div>
                    <div style="clear:both"></div>
                      
                #end
                
               
                <div style="clear:both"></div>
                <div class="spps_more">
                    <a href="/case/index/0"><img class="spps_img_more" src="/img/morepic.png"></a>
                    <div style="clear:both"></div>
                </div>
            </div>
        </div>
        <!--赛迪云-->
        <div class="example_box" style="width:316px;float:right;margin-left:0px;">
            <div class="example_titlebox">
                <div class="examples_title">
                    <img style="margin-left:15px;margin-top:8px;float:left;" src="/img/cloud.jpg">
                    <span class="example_case">赛迪云</span>
                </div>
            </div>
            <div style="clear:both"></div>
            <div class="example_contentsbox" style="background:url('/img/yun.png')">
                
                <div class="cloud_content" >
                    <span style="font-size:18px;line-height:25px;color:#0066AF;float:left;margin-bottom:8px;font-weight:bold;font-family:SimHei;">赛迪云</span>
                    <div style="clear:both;"></div>
                        由<span style="color:#0066AF;">中冶赛迪</span>联合国际巨头<span style="color:#0066AF;">甲骨文</span>打造，为企业提供各种云上应用、服务和行业解决方案。<br/>
                    <div class="mashangtiyan">
                        <a href="http://www.clickbiz.cn/"><img src="/img/mashangtiyan_03.png"></a>
                    </div>
                </div>
                <div style="clear:both"></div>
            </div>
        </div>
        <div style="clear:both"></div>
    </div>
    <!--图标-->
    <div style="clear:both"></div>
    <div class="icos">
    
        #foreach($entity in ${data.get("basePics")})                        
            <div class="ico"><a href="${entity.get("picLink")}"><img src="${entity.get("picPath")}"></div></a>
        #end
        
        <div style="clear:both"></div>
    </div>

    #parse("footer.vm")
</div>
<script type="text/javascript" src="/js/jquery-1.4.1.js"></script>
<script type="text/javascript" src="/js/webjs.js"></script>
<script>
 $(document).ready(function(){
 
    <!--导航显示控制-->
    nav_active=0;
    change2active($(".nav_li").eq(nav_active));
    <!--首页图片列表动画-->
    var t=setInterval(pic_normal_run,6000);
    var npic=0;
    $("#pic_list").hover(function(){clearInterval(t)}, function(){t = setInterval(pic_normal_run, 6000);});
    $("#pic_text li").eq(npic).css({"background":"#0066AF"}).siblings().css({"background":"#DFDFDF"});
    function pic_normal_run()
    {
        pic_scroll_left(500);
    }
    function pic_fast_left()
    {
        pic_scroll_left(100);
    }
    function pic_fast_right()
    {
        pic_scroll_right(100);
    }
    function pic_scroll_left(speed)
    {
        var _scroll = $("#pic_list_ul");
        $("#pic_list_ul").animate({"margin-left":"-980px"},speed,function(){
            _scroll.css({"margin-left":"0px"}).find("li:first").remove().appendTo(_scroll);
            npic=npic>=$("#pic_list_ul").children().length-1?0:npic+1;
            $("#pic_text li").eq(npic).css({"background":"#0066AF"}).siblings().css({"background":"#DFDFDF"});
        });
    }
    function pic_scroll_right(speed)
    {
        var _scroll = $("#pic_list_ul");
        _scroll.css({"margin-left":"-980px"}).find("li:last").remove().prependTo(_scroll);
            _scroll.animate({"margin-left":"0px"},speed,function(){
            npic=npic<0?$("#pic_list_ul").children().length-1:npic-1;
            $("#pic_text li").eq(npic).css({"background":"#0066AF"}).siblings().css({"background":"#DFDFDF"});
        });
    }
    function moveNew()
    {
        $(".news_ul").animate({"margin-top":"-30px"},200,function(){
            $(".news_ul").css({"margin-top":"0px"}).find("li:first").remove().appendTo($(".news_ul"));
        });
    }
    function movePro()
    {
    
        $("#spps_pro_ul").animate({"margin-left":"-288px"},200,function(){
            $("#spps_pro_ul").css({"margin-left":"0px"}).find("li:first").remove().appendTo($("#spps_pro_ul"));
        });
    }
    $("#pic_text li").click(function(){
        var i =$(this).attr("name")-1;
        if(i>npic)
        {
            for(var j=0;j<i-npic;j++)
            {
                setTimeout(pic_fast_left,120*j);
            }
        }
        else if(i < npic)
        {
            for(var j=0;j<npic-i;j++)
            { 
                setTimeout(pic_fast_right,120*j);
            }
        }
    });
    
    
    <!--新闻上下动画-->
    $(".news_li").show();
    var t2=setInterval(moveNew,15000);

    $(".news_ul").eq(0).hover(function(){clearInterval(t2)},function(){t2 = setInterval(moveNew, 15000);});
    
    <!--产品左右动画-->
    //$(".spps_links_p:not(:first)").hide();
    var t3=setInterval(movePro,60000);
    
    $("#spps_pro_ul").eq(0).hover(function(){clearInterval(t3)},function(){t3 = setInterval(movePro, 60000);});
    
    $(".spps_li_service:first").find("p").css("display","block");
    $(".spps_togglebtn:first").attr("src","/img/open.png");
    <!--服务点击控制-->
    $(".spps_service_btn").click(function(){
        var pp=$(this).parent().parent().find(".spps_toggle").eq(0);
        if(pp.css("display")=="none")
        {
            pp.slideDown("fast");
            $(this).parent().parent().siblings().find("p").slideUp("fast");
            $(this).parent().parent().siblings().find(".spps_togglebtn").attr("src","/img/close.png");
            $(this).find("img").attr("src","/img/open.png");
        }
        else
        {
            pp.slideUp("fast");
            $(this).find("img").attr("src","/img/close.png");
        }
    });
});
</script>
</body>
</html>