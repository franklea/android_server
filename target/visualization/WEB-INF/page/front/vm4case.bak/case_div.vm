<ul class="case_ul">

	#foreach($entity in ${data.get("case")})
		
		<li class="case_li" >
            <div class="case_item">
                <div class="case_item_up">
                    <img style="float:left;" src="/img/twopoint_03.png">
                    <a  href="${entity.get("link")}" style="float:left;margin-left:10px;" >${entity.get("name")}</a>
                </div>
                <div class="case_item_down">
                    <img class="case_img" src="${entity.get("face")}">
                    <div style="float:left;display:inline;">
                        <div class="case_item_down_div">${entity.get("info")}</div>
                        <div style="clear:both"></div>
                        <a href="${entity.get("link")}"><img class="case_item_down_divimg" src="/img/enterpic.png"></a>
                    </div>
                </div>
            </div>
        </li>
		
	#end
	
    
    <div style="clear:both"></div>
</ul>