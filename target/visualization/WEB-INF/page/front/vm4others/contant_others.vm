<script>
function check_others()
{
    if($("input[name='name']").val().length>20 || $("input[name='name']").val().length<3)
    {
        speakInfo("姓名有误");
        $("input[name='name']").focus();
        return false;
    }
    if( $("input[name='mail']").val().length > 50 || /^\w+([-+.]\w+)*@\w+([-.]\w+)*\.\w+([-.]\w+)*$/.test($("input[name='mail']").val()) == false)
    {
        speakInfo("邮箱有误");
        $("input[name='mail']").focus();
        return false;
    }
    if( $("input[name='phone']").val().length > 20 || $("input[name='phone']").val().length < 5)
    {
        speakInfo("电话有误");
        $("input[name='phone']").focus();
        return false;
    }
    if( $("input[name='title']").val().length > 40 || $("input[name='title']").val().length < 2)
    {
        speakInfo("标题有误");
        $("input[name='title']").focus();
        return false;
    }
    if($("textarea[name='content']").val().length >32768 || $("textarea[name='content']").val().length <1)
    {
        speakInfo("内容填写有误");
        $("textarea[name='content']").focus();
        return false;
    }
    if($("input[name='inCaptcha']").val().length ==0 )
    {
        speakInfo("请填写验证码");
        $("input[name='inCaptcha']").focus();
        return false;
    }
    if( ! $("input[type='checkbox']").is(':checked'))
    {
        speakInfo("请阅读隐私条款");
        $("input[type='checkbox']").focus();
        return false;
    }
    return true;
    
}

$(document).ready(function(){
    $("#change").click(function(){
        $("#imgcap").attr("src","/identify?num="+Math.random());
    });
    
    $("#submit").click(function(){
        if(check_others())
        {
            $.post("/consult/other/submit",
            {
                name:$("input[name='name']").val(),
                mail:$("input[name='mail']").val(),
                phone:$("input[name='phone']").val(),
                title:$("input[name='title']").val(),
                content:$("textarea[name='content']").val(),
                inCaptcha:$("input[name='inCaptcha']").val()
            },
            function(data){
                var d=eval("("+data+")");
                if(d.error==0)
                {
                    speakInfo("提交成功");
                    window.location.reload();
                }
                else if(d.error == 1)
                {
                    speakInfo("验证码错误");
                    $("input[name='inCaptcha']").focus();
                }
                else if(d.error == 2)
                {
                    speakInfo("姓名不合法");
                }
                else if(d.error == 3)
                {
                    speakInfo("邮箱不合法");
                }
                else if(d.error == 4)
                {
                    speakInfo("电话不合法");
                }
                else if(d.error == 5)
                {
                    speakInfo("标题不合法");
                }
                else if(d.error == 6)
                {
                    speakInfo("内容不合法");
                }
                else
                {
                    speakInfo("服务器检测到数据格式有误");
                }
            });
        }
    });
    
    
});
</script> 
