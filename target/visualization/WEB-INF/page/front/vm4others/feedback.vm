<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" /><meta http-equiv="Cache-control" content="private"/>
<link type="text/css" rel="stylesheet" href="/css/webcss.css"/>
<title>中冶赛迪重庆信息技术有限公司</title>
</head>
<body>
<div class="main">
    #parse("header.vm")
    <div class="right_frame" style="float:left;">
        

        <div class="right_item_up" style="margin-top:3px;width:980px;">
            <img style="float:left;margin-top:3px;" src="/img/twopoint_03.png">
            <a  href="" style="float:left;margin-left:5px;font-family:Microsoft YaHei,SimHei;font-size:15px;" >网站反馈</a>
        </div>

        <div style="clear:both"></div>
        <div class="greybox" style="width:980px;">
  			<div style="color:#EFB312;font-size:14px;margin-left:50px;">请提供下列信息以便于我们把您的请求转给相应人员，从而使您能够尽早得到答复。</div>
        </div>
        <div style="clear:both;"></div>
        
		<div class="comsultionbar" style="margin-top:20px;">
			<div class="comsultion_item_name">联系电话</div>
			<input name="phone" class="comsultion_item_value" />
			<div style="clear:both;"></div>
		</div>
		<div class="comsultionbar" style="height:155px;">
			<div class="comsultion_item_name">反馈内容</div>
			<textarea name="content" class="comsultion_item_value" style="width:541px;height:128px;"></textarea>
			<div style="clear:both;"></div>
			<div  class="register_reminder" style="margin-left:130px;">小于400字符</div>
		</div>
		<div class="comsultionbar">
			<div class="comsultion_item_name">验证码</div>
			<input name="inCaptcha" class="comsultion_item_value" style="width:200px;" />
			<img id="imgcap" src="/identify" style="margin-top: 2px;float:left;margin-left:15px;width:112px;height:39px;">
			<a id="change" style="float:left;width:52px;height:39px;font-size:13px;margin-left:15px;text-decoration:underline">看不清？换一张</a>
			<div style="clear:both;"></div>
		</div>
		<div class="comsultionbar" style="margin-top:0px;height:30px;">
			<input type="checkbox" style="float:left;margin-left:103px;">
			<span style="float:left;font-size:13px;">&nbsp;已阅读<a style="text-decoration:underline;color:#0066AF;" href="/web/privacy">《隐私条款》</a></span>
		</div>
		<div class="comsultionbar" style="margin-top:0;">
			<a id="submit"><img src="/img/submit.png" style="float:left;margin-left:102px;"></a>
		</div>
    <div style="clear:both;height:40px;"></div>
    </div>

    #parse("footer.vm")
    
</div>
<script type="text/javascript" src="/js/jquery-1.4.1.js"></script>
<script type="text/javascript" src="/js/webjs.js"></script>  
<script>
function check_feedback()
{

    if( $("input[name='phone']").val().length > 50 || $("input[name='phone']").val().length < 3)
    {
        speakInfo("联系方式有误");
        $("input[name='phone']").focus();
        return false;
    }
    if($("textarea[name='content']").val().length >32768 || $("textarea[name='content']").val().length <1)
    {
        speakInfo("内容填写有误");
        $("textarea[name='content']").focus();
        return false;
    }
    if($("input[name='inCaptcha']").val().length ==0 )
    {
        speakInfo("请填写验证码");
        $("input[name='inCaptcha']").focus();
        return false;
    }
    if( ! $("input[type='checkbox']").is(':checked'))
    {
        speakInfo("请阅读隐私条款");
        $("input[type='checkbox']").focus();
        return false;
    }
    return true;
    
}
 $(document).ready(function(){
    $("#change").click(function(){
        $("#imgcap").attr("src","/identify?num="+Math.random());
    });
    
    $("#submit").click(function(){
        if(check_feedback())
        {
            $.post("/consult/feedback/submit",
            {
                phone:$("input[name='phone']").val(),
                content:$("textarea[name='content']").val(),
                inCaptcha:$("input[name='inCaptcha']").val()
            },
            function(data){
                var d=eval("("+data+")");
                if(d.error==0)
                {
                    speakInfo("提交成功");
                    window.location.reload();
                }
                else if(d.error == 1)
                {
                    speakInfo("验证码错误");
                    $("input[name='inCaptcha']").focus();
                }
                else if(d.error == 2)
                {
                    speakInfo("电话不合法");
                }
                else if(d.error == 3)
                {
                    speakInfo("内容不合法");
                }
                else
                {
                    speakInfo("服务器检测到数据格式有误");
                }
            });
        }
    });
    
    
});
</script>
</body>
</html>