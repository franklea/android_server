 $(document).ready(function(){
    var solution_s=${data.get("solution")};
    var product_s=${data.get("product")};
    var service_s=${data.get("service")};
    
    $("#solution li").click(function(){
        $(this).siblings().removeClass("case_li_active").addClass("case_li");
        $(this).removeClass("case_li").addClass("case_li_active");
        solution_s=$(this).attr("name");
        loadPage();
    });
    $("#product li").click(function(){
        $(this).siblings().removeClass("case_li_active").addClass("case_li");
        $(this).removeClass("case_li").addClass("case_li_active");
        product_s=$(this).attr("name");
        loadPage();
    });
    $("#service li").click(function(){
        $(this).siblings().removeClass("case_li_active").addClass("case_li");
        $(this).removeClass("case_li").addClass("case_li_active");
        service_s=$(this).attr("name");
        loadPage();
    });
    $(".searchdiv a").click(function(){
        loadPage();
    });
    var maxPage=parseInt($(".pageandpage").attr("name"));
    maxPage=parseInt((maxPage+9)/10);
    var showNum=5;
    var limit = maxPage > 5?6:maxPage+1;
    pagepage(0,limit);
    $(".pageandpage li").click(function(){
    
        if($(this).find("a").text()=="<")
        {
            var first=parseInt($(".pageandpage li:eq(1)").find("a").text());
            var limit=6;
            if(first>1)
            {
                pagepage(first-6,limit);
                //$(this).parent().children().find("a").css("font-weight","normal");
                page2normal($(this).parent().children().find("a"));
            }
            
        }
        else if($(this).find("a").text()==">")
        {
            var last=parseInt($(this).prev().find("a").text());
            
            if(last<maxPage)
            {
                var limit=5+last>maxPage?maxPage-last:5;
                limit=limit+1;
                pagepage(last,limit);
                //$(this).parent().children().find("a").css("font-weight","normal");
                page2normal($(this).parent().children().find("a"));
            }
        }
        else
        {
            //$(this).find("a").css("font-weight","bold");
            //$(this).siblings().find("a").css("font-weight","normal");
            page2active($(this).find("a"));
            page2normal($(this).siblings().find("a"));
            getData(parseInt($(this).find("a").text()));
        }
        
    });

    function pagepage(start,limit)
    {   
        for(var i=1;i<=6;i++)
        {
            if(i<limit)
            {
                $(".pageandpage li:eq("+i+")").css("display","block").find("a").text(start+i+"");
            }
            else if(i==limit)
            {
                $(".pageandpage li:eq("+i+")").css("display","block").find("a").text(">");
            }
            else
            {
                $(".pageandpage li:eq("+i+")").css("display","none");
            }
        }
    }
    function getData(pagenum)
    {   
        
        $.post("/case/index/"+pagenum,{solution:solution_s,
                                product:product_s,
                                service:service_s,
                                key:$(".keywordinput").val()},function(data){
                                $(".right_content").html(data); }  );
    }
    function loadPage()
    {
        //alert($("#solution li[class='case_li_active']").length);
        submit("/case/index/0",{"solution":solution_s,
                                product:product_s,
                                service:service_s,
                                "key":$(".keywordinput").val()} );
    }
});
</script></body></html>