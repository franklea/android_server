<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>用户管理</title>
</head>
<body>
<div class="main">
   #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/userback/show/1">用户</a></li>
            <li class="left_li_active"><div><a href="/userback/show/1">注册用户信息管理</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame">
        
        <div style="clear:both"></div>
        <div class="filterbox" >
            <span class="filter_itemname">关键字:</span>
            <input class="filter_input" #if(${data.containsKey("key")}) value="${data.get("key")}" #end/>
            <a class="filter_btn" >筛选</a>
        </div>
        
        
        <div style="clear:both"></div>
        <div class="listdiv">
            <ul class="listul">
            
            	 <li class="user_li">
                    <span class="name_title" style="width:150px;">用户姓名</span>
                    <span class="name_title" style="width:150px;">公司</span>
                    <span class="name_title" style="width:150px;">职位</span>
                    <span class="delete_title">删除</span>
                    <span class="edit_title">查看</span>
                 </li>
            	#foreach($user in ${data.get("user")})
	                <li class="user_li" id="${user.get("id")}">
	                    <span class="item_name" style="width:150px;overflow:hidden;" >${user.get("name")}</span>
	                    <span class="item_name" style="width:150px;overflow:hidden;" >${user.get("company")}</span>
	                    <span class="item_name" style="width:150px;overflow:hidden;" >${user.get("job")}</span>
	                    <a  class="deletebtn">删除</a>
	                    <a  class="editbtn">查看</a>
	                </li>
            	#end
            	
               
            </ul>
        </div>
        <div style="clear:both"></div>
        <div class="twobpagetn">
			<a class="pagebtn_style" name="${data.get("pre")}"><img src="/img/prepage_pic_03.png"><span>上一页</span></a>
            <a class="pagebtn_style" name="${data.get("next")}"><span>下一页</span><img src="/img/nextpage_pic_03.png"></a>
        </div>
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
</div>
<div class="mask">
</div>
<div class="back1">
	
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 $(document).ready(function(){
    nav_active=1;
    change2active($(".nav_li").eq(nav_active));
    
    $(".filter_btn").click(function(){
        submit("/userback/show/1",{"key":$(".filter_input").val()});
    });
    $(".editbtn").click(function(){
        //window.location.href="user?operation=10&id="+$(this).parent().attr("id");
        $.post("/userback/show/user/"+$(this).parent().attr("id"),{},function(data){
            $(".back1").html(data);
            $(".mask").fadeIn("fast");
            $(".back1").fadeIn("fast").css("top",($(document).scrollTop()+($(window).height()-$(".back1").height())/2)+"px");
        });
        
    });
    $(".deletebtn").click(function(){
        window.location.href="/userback/deluser/"+$(this).parent().attr("id");
    });
    $(".mask").css("height",$(document).height()+20+"px");
    $(".back1").css({"top":"300px","left":($(document).width()-300)/2+"px"});
    $(".mask").click(function(){
        $(".mask").fadeOut("fast");
        $(".back1").fadeOut("fast");
    });
    $(".twobpagetn a").click(function(){
        if($(this).attr("name")!="0")
            window.location.href="/userback/show/"+$(this).attr("name");
    });
    if($(".twobpagetn a").eq(0).attr("name")!="0")
    {
        $(".twobpagetn a").eq(0).removeClass("pagebtn_style").addClass("pagebtn_style_active");
    }
    if($(".twobpagetn a").eq(1).attr("name")!="0")
    {
        $(".twobpagetn a").eq(1).removeClass("pagebtn_style").addClass("pagebtn_style_active");
    }
});
</script>
</body>
</html>