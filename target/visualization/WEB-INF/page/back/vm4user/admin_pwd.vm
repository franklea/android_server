<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>密码维护</title>
</head>
<body>
<div class="main">
    <!--header-->
	#parse("backheader.vm")
	
    
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/adminback/password">密码维护</a></li>
            <li class="left_li_active"><div><a href="/adminback/password">密码维护</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame" style="height:800px;">
        <div class="bigright_box" >
        
        	   <span class="filter_itemname" style="width:100px;" >旧密码:</span>
               <input name="oldPwd" type="password" class="filter_input" style="width:200px;margin-left:0"  />
               <div style="clear:both;height:10px;"></div>
               
               <span class="filter_itemname" style="width:100px;">新密码:</span>
               <input name="pwd"  type="password" class="filter_input" style="width:200px;margin-left:0"  />
               <div style="clear:both;height:10px;"></div>
               <span class="filter_itemname" style="width:100px;" >新密码确认:</span>
               <input name="pwd2" type="password"  class="filter_input" style="width:200px;margin-left:0"  />
               <div style="clear:both;height:10px;"></div>
               
               <input id="submit" type="button" value="保存"/>
        </div>
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 var editor;  
 $(document).ready(function(){
    nav_active=0;
    change2active($(".nav_li").eq(nav_active));
    var mailone=false;
    $("#submit").click(function(){
        if($("input[name='oldPwd']").val()=="")
        {
            $("input[name='oldPwd']").focus();
            return;
        }
        if($("input[name='pwd']").val()=="")
        {
            $("input[name='pwd']").focus();
            return;
        }

        if($("input[name='pwd2']").val()!=$("input[name='pwd']").val())
        {
            $("input[name='pwd2']").focus();
            $("input[name='pwd2']").select();
            return;
        }
        
        $.post("/adminback/setpassword",{oldPwd:$("input[name='oldPwd']").val(),pwd:$("input[name='pwd']").val()},function(data){
                if(data==1)
                {
                    alert("更改成功");
                    window.location.reload();
                }
                else alert("更改失败");
            });
    });
    
    
});
</script>
</body>
</html>