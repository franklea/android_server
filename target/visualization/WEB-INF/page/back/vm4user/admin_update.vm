	$("#submit").click(function(){
		if($("input[name='mail']").val()=="")
			return true;
		var lis=$("#p").children();
		var p=0;
		for(var i=lis.length-1;i>=0;i--)
		{
			if(lis.eq(i).prop("checked"))
				p=p+1;
			if(i!=0)
				p=p*2;
		}
		$.post("user",{operation:11,mail:$("input[name='mail']").val(),privilege:p},function(data){
			if(data == "$json") alert("test");
			var d=eval("("+data+")");
			if(d.error==1)
			{
				alert(data);
			}
			else
			{
				window.location.href="user?operation=9";
			}
		})
	});
   	
});
