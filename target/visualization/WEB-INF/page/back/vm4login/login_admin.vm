<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>中冶赛迪重庆信息技术有限公司</title>
</head>
<body>
<div class="main">
    <!--login-->
    <div class="login">
            <div style="float:left;margin-left:-80px;height:30px;width:410px;background-color:#66AABF;"></div>
	        <input id="mail" class="login_input" style="margin-top:30px;" placeholder="用户名/邮箱">
	        <input id="pwd" type="password" class="login_input" placeholder="密码">
	        <div style="clear:both"></div>
	        <input id="capacha" class="captcha_input" placeholder="验证码">
	        <img class="captcha_img" src="identify">
	        <a class="change1" >换一张</a>
	        <div style="clear:both"></div>
	        <input type="checkbox" class="login_checkbox"><span class="login_checkbox" style="margin-left:5px;">下次自动登录</span>
	        <div style="clear:both"></div>
	        <input class="login_btn" type="button" value="登录">
    </div>
    
    <div style="clear:both"></div>
</div>
<div style="position:absolute;top:0;left:0;height:100%;width:100%;background-color:#DDD;z-index:-1;">
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 $(document).ready(function(){    
    //$(".main").css({"height":$(document).height(),"scroll":"none"});
    $(".change1").click(function(){
        $(".captcha_img").attr("src","/identify?num="+Math.random());
    });
    $("#capacha").keypress(function(e){
        if(e.which==13)
            $(".login_btn").trigger("click");
    });
    $(".login_btn").click(function(){
        if($("#mail").val()=="")
        {
            alert("邮箱不能为空");
            $("#mail").focus();
            return;
        }
        if($("#pwd").val()=="")
        {
            alert("密码不能为空");
            $("#pwd").focus();
            return;
        }
        if($("#capacha").val()=="")
        {
            alert("验证码不能为空");
            $("#capacha").focus();
            return;
        }
        $.post("/adminback/login", { mail: $("#mail").val(), password: $("#pwd").val() ,inCaptcha:$("#capacha").val()}, function(data){
                var d=eval("("+data+")");
                if(d.error==0)
                    window.location.href=d.link;
                else if(d.error==1)
                {
                    alert("验证码错误");
                    $(".change1").trigger("click");
                }
                else if(d.error==2)
                    alert("用户名错误");
                else if(d.error==3)
                    alert("密码错误");
                else alert("其他错误");
            });
    });
});
</script>
</body>
</html>