<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>服务分类管理</title>
</head>
<body>
<div class="main">
   #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/serviceback/serviceshow/1">服务信息管理</a></li>
            <li class="left_li"><div><a href="/serviceback/serviceshow/1">服务信息管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li_active"><div><a href="/serviceback/typeshow">服务分类管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/serviceback/picture">服务图片管理</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame">
        
        <a href="/serviceback/inserttype_edit" class="addbtn">添加分类</a>        
        <div style="clear:both"></div>
        <div class="listdiv">
            <ul class="listul">
            
            	 <li class="user_li">
                    <span class="name_title">分类名称</span>
                    <span class="delete_title">删除</span>
                    <span class="edit_title">修改</span>
                 </li>
            	#foreach($type in ${data.get("typeName")})
	
	                <li class="user_li" id="${type.get("id")}">
	                    <span class="item_name" >${type.get("name")}</span>
	                    <a  class="deletebtn">删除</a>
	                    <a  class="editbtn">修改</a>
	                </li>
                
            	#end
            	
               
            </ul>
        </div>
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 $(document).ready(function(){
    nav_active=4;
    change2active($(".nav_li").eq(nav_active));  
    $(".editbtn").click(function(){
        window.location.href="/serviceback/updatetype_edit/"+$(this).parent().attr("id");
    });
    $(".deletebtn").click(function(){
        window.location.href="/serviceback/deletetype/"+$(this).parent().attr("id");
    });
});
</script>
</body>
</html>