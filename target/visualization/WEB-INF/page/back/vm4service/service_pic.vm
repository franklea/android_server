<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<link rel="stylesheet" href="/css/uploadify.css" />
<title>服务图片管理</title>
</head>
<body>
<div class="main">
    <!--header-->
   #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/serviceback/serviceshow/1">服务信息管理</a></li>
            <li class="left_li"><div><a href="/serviceback/serviceshow/1">服务信息管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/serviceback/typeshow">服务分类管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li_active"><div><a href="/serviceback/picture">服务图片管理</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame">       
        <form id="form1" method="post" action="/serviceback/pictureset">
        <div class="filterbox service_border" >
                <span class="filter_itemname">首页图片:</span>
               <input name="indexPic" id="homepic" class="filter_input" style="width:320px;"  #if(${data.containsKey("indexPic")}) value="${data.get("indexPic")}" #end/>
               <input id="homepicbtn" type="file" class="select_face_btn" />
               <input id="up1" type="button" class="submit_btn" value="更改"/>

               <div style="clear:both"></div>
            	<img id="simple_home" class="simple_pic_show" #if(${data.containsKey("indexPic")}) src="${data.get("indexPic")}" #end>

        </div>
        <div style="clear:both"></div>
        <div class="filterbox service_border" >               
               <div style="clear:both;height:5px;"></div>
               <span class="filter_itemname">置顶图片:</span>
               <input name="servicePic" id="toppic"  class="filter_input" style="width:320px;" #if(${data.containsKey("servicePic")}) value="${data.get("servicePic")}" #end/>
               <input id="toppicbtn" type="file" class="select_pic_btn" />
               <input id="up2" type="button" class="submit_btn" value="更改"/>
				
			   <div style="clear:both"></div>
               <img id="simple_top" class="simple_pic_show" #if(${data.containsKey("servicePic")}) src="${data.get("servicePic")}" #end>
        </div>
        <div style="clear:both"></div>
     </form>
    </div>
    <div style="clear:both"></div>
</div>
<script type="text/javascript" src="http://code.jquery.com/jquery-1.4.1.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script type="text/javascript" src="/js/jquery.uploadify.min.js"></script>
<script>
 $(document).ready(function(){
    nav_active=4;
    change2active($(".nav_li").eq(nav_active));   
    var options_upload={
        'auto'          : true,
        'swf'           : '/js/uploadify.swf',
        'uploader'      : '/upload',
        'buttonText'    : '选择文件',
        'height'        : 20,
        'width'         : 80,
       
    };

    $("#homepicbtn").uploadify(options_upload);
    $("#homepicbtn").uploadify('settings','onUploadSuccess',function(file, data, response) {  
                                var d=eval("("+data+")");
                                if(d.error==1)  alert(d.message);
                                else
                                {
                                    $("#homepic").val(d.url);
                                    $("#simple_home").attr("src",d.url);
                                }   
                            });
    $("#up1").click(function(){
        if(check($("#homepic")))
            $("#form1").submit();
    });
    $("#toppicbtn").uploadify(options_upload);
    $("#toppicbtn").uploadify('settings','onUploadSuccess',function(file, data, response) {  
                                var d=eval("("+data+")");
                                if(d.error==1)  alert(d.message);
                                else
                                {
                                    $("#toppic").val(d.url);
                                    $("#simple_top").attr("src",d.url);
                                }
                            });
    $("#up2").click(function(){
        if(check($("#toppic")))
            $("#form1").submit();
        });
    $(".simple_pic_show").load(function(){
        if($(this).width()>300)
            $(this).css("width","300px");
        if($(this).height()>150)
            $(this).css("height","150px");
        $(this).parent().css("height",($(this).height()+40)+"px");
     });
     
    for(var i=0;i<$(".simple_pic_show").length;i++)
    {
        picload($(".simple_pic_show").eq(i));
    }
    $(".simple_pic_show").load(function(){
        picload($(this));
    });
    
});
</script>
</body>
</html>