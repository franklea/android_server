<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>服务列表</title>

</head>
<body>
<div class="main">
   #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/serviceback/serviceshow/1">服务信息管理</a></li>
            <li class="left_li_active"><div><a href="/serviceback/serviceshow/1">服务信息管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/serviceback/typeshow">服务分类管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/serviceback/picture">服务图片管理</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame">
        
        <a href="/serviceback/insertservice_edit" class="addbtn">添加服务</a>
        <div style="clear:both"></div>
        <div class="filterbox" >
            <span class="filter_itemname">关键字:</span>
            <input class="filter_input" #if(${data.containsKey("key")}) value="${data.get("key")}" #end/>
            <a class="filter_btn" >筛选</a>
        </div>
        
        
        <div style="clear:both"></div>
        <div class="listdiv">
            <ul class="listul">
            
            	 <li class="user_li">
                    <span class="name_title">服务名称</span>
                    <span class="delete_title">删除</span>
                    <span class="edit_title">修改</span>
                 </li>
            	#foreach($service in ${data.get("name")})
	
	                <li class="user_li" id="${service.get("id")}">
	                    <span class="item_name" >${service.get("name")}</span>
	                    <a  class="deletebtn">删除</a>
	                    <a  class="editbtn">修改</a>
	                </li>
                
            	#end
            	
               
            </ul>
        </div>
        <div style="clear:both"></div>
        <div class="twobpagetn">
            <a class="pagebtn_style" name="${data.get("pre")}"><img src="/img/prepage_pic_03.png"><span>上一页</span></a>
            <a class="pagebtn_style" name="${data.get("next")}"><span>下一页</span><img src="/img/nextpage_pic_03.png"></a>
        </div>
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 $(document).ready(function(){
    nav_active=4;
    change2active($(".nav_li").eq(nav_active));   
    $(".filter_btn").click(function(){
        submit("/serviceback/serviceshow/1",{"key":$(".filter_input").val()});
    });
    $(".editbtn").click(function(){
        window.location.href="/serviceback/updateservice_edit/"+$(this).parent().attr("id");
    });
    $(".deletebtn").click(function(){
        window.location.href="/serviceback/deleteservice/"+$(this).parent().attr("id");
    });
    $(".twobpagetn a").click(function(){
        if($(this).attr("name")!="0")
            window.location.href="/serviceback/serviceshow/"+$(this).attr("name");
    });
    if($(".twobpagetn a").eq(0).attr("name")!="0")
    {
        $(".twobpagetn a").eq(0).removeClass("pagebtn_style").addClass("pagebtn_style_active");
    }
    if($(".twobpagetn a").eq(1).attr("name")!="0")
    {
        $(".twobpagetn a").eq(1).removeClass("pagebtn_style").addClass("pagebtn_style_active");
    }
});
</script>
</body>
</html>