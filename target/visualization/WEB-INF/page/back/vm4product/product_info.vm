<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>产品列表管理</title>
</head>
<body>
<div class="main">
   #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/productback/show/1">产品管理</a></li>
            <li class="left_li_active"><div><a href="/productback/show/1">产品信息管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/productback/picture">产品图片管理</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame">
        
        <a  class="addbtn">添加产品</a>
        <div style="clear:both"></div>
        <div class="filterbox" >
            <span class="filter_itemname">关键字:</span>
            <input class="filter_input"  #if(${data.containsKey("key")}) value="${data.get("key")}" #end/>
            <a class="filter_btn" >筛选</a>
        </div>
        
        
        <div style="clear:both"></div>
        <div class="listdiv">
            <ul class="listul">
            
            	 <li class="user_li">
                    <span class="name_title">产品名称</span>
                    <span class="delete_title">删除</span>
                    <span class="edit_title">修改</span>
                    <span class="index_show_title">首页显示</span>
                 </li>
            	#foreach($product in ${data.get("product")})
	
	                <li class="user_li" id="${product.get("id")}">
	                    <span class="item_name" >${product.get("name")}</span>
	                    <a  class="deletebtn">删除</a>
	                    <a  class="editbtn">修改</a>
	                    <a  class="index_showbtn">#if(${product.get("shown")} == 0)首页显示#else 已首页显示#end</a>
	                </li>
                
            	#end
            	
               
            </ul>
        </div>
        <div style="clear:both"></div>
        <div class="twobpagetn">
			<a class="pagebtn_style" name="${data.get("pre")}"><img src="/img/prepage_pic_03.png"><span>上一页</span></a>
            <a class="pagebtn_style" name="${data.get("next")}"><span>下一页</span><img src="/img/nextpage_pic_03.png"></a>
        </div>
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 $(document).ready(function(){
    nav_active=3;
    change2active($(".nav_li").eq(nav_active));     
    $(".filter_btn").click(function(){
        submit("/productback/show/1",{"key":$(".filter_input").val()});
    });
    $(".editbtn").click(function(){
        window.location.href="/productback/update_edit/"+$(this).parent().attr("id");
    });
    $(".deletebtn").click(function(){
        window.location.href="/productback/delete/"+$(this).parent().attr("id");
    });
    $(".index_showbtn").click(function(){
        window.location.href="/productback/setshow/"+$(this).parent().attr("id");
    });
    $(".addbtn").click(function(){
        window.location.href="/productback/insert_edit";
    });
    $(".twobpagetn a").click(function(){
        if($(this).attr("name")!="0")
            window.location.href="/productback/show/"+$(this).attr("name");
    });
    if($(".twobpagetn a").eq(0).attr("name")!="0")
    {
        $(".twobpagetn a").eq(0).removeClass("pagebtn_style").addClass("pagebtn_style_active");
    }
    if($(".twobpagetn a").eq(1).attr("name")!="0")
    {
        $(".twobpagetn a").eq(1).removeClass("pagebtn_style").addClass("pagebtn_style_active");
    }
});
</script>
</body>
</html>