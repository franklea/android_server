<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<link rel="stylesheet" href="/css/uploadify.css" />
<title>图片信息编辑</title>
</head>
<body>
<div class="main">
    <!--header-->
    #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/webback/pic">网站信息</a></li>
            <li class="left_li_active"><div><a href="/webback/pic">图片信息管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/webback/page">页面管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/companyinfoback/index">公司介绍管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/consultback/2/1">网站反馈管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/consultback/0/1">业务咨询管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/consultback/1/1">其他咨询管理</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame">       
        <form action="${link}" method="post">
	        <div class="filterbox service_border" style="padding-left:20px;width:710px;">
	        	   <input name="id" style="display:none" #if(${data.containsKey("picId")}) value="${data.get("picId")}" #else value=0 #end>
	               <span class="filter_itemname">图片链接:</span>
	               <input name="link" id="link" class="filter_input" style="width:320px;" #if(${data.containsKey("picLink")}) value="${data.get("picLink")}" #end/>
	               <div style="clear:both;height:10px;"></div>
	               
	               <span class="filter_itemname">图片地址:</span>
	               <input name="path" id="path" class="filter_input" style="width:320px;" #if(${data.containsKey("picPath")}) value="${data.get("picPath")}" #end/>
	               <input id="selectfile" type="file" class="select_face_btn" />
	               <div style="clear:both;height:10px;"></div>
	               <input id="show" type="button" class="submit_btn"  style="margin-left:200px;" value="预览"/>
	               <input id="save" type="button" class="submit_btn" value="保存"/>
				   <div style="clear:both"></div>
	        </div>
        </form>
	     <div style="clear:both"></div>
	     <img id="simple_show" class="simple_pic_show" src="/img/logo.png">
	</div>
    <div style="clear:both"></div>
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script type="text/javascript" src="/js/jquery.uploadify.min.js"></script>
<script>
 $(document).ready(function(){
    nav_active=8;
    change2active($(".nav_li").eq(nav_active));  
    var options_upload={
        'auto'          : true,
        'swf'           : '/js/uploadify.swf',
        'uploader'      : '/upload',
        'buttonText'    : '选择文件',
        'height'        : 20,
        'width'         : 80,
       
    }

    $("#selectfile").uploadify(options_upload);
    $("#selectfile").uploadify('settings','onUploadSuccess',function(file, data, response) {  
                                var d=eval("("+data+")");
                                if(d.error==1)  alert(d.message);
                                else
                                {
                                    $("#path").val(d.url);
                                    $("#simple_show").attr("src",d.url);
                                }
                            });
    $("#save").click(function(){
        if(checkPic())
            $("form").submit();
        });
    
    if($("#simple_show").width()>400)
           $("#simple_show").css("width","400px");
    $("#simple_show").load(function(){
       if($("#simple_show").width()>400)
           $("#simple_show").css("width","400px");
    });
    
});
</script>
</body>
</html>