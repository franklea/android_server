<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>名词库</title>
</head>
<body>
<div class="main">
   #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="">名词库</a></li>
            <li class="left_li"><div><a href="">名词库</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    <!--右边框-->
    <div class="right_frame">

        <div class="filterbox" >
            <span class="filter_itemname" style="width:50px;">名称:</span>
            <input class="filter_input" placeholder="在这里输入名词"/>
            <input id="filter_btn" type="button" class="explainbtn" style="margin-right:50px;" value="搜索"/>
            
            <input id="add_btn" type="button" style="display:none" class="explainbtn" value="添加"/>
            <input id="edit_btn" type="button" style="display:none" class="explainbtn" value="修改"/>
            <input id="delete_btn" type="button" style="display:none" class="explainbtn" value="删除"/>
            <div style="clear:both"></div>
            <input id="result" readonly  style="width:240px;margin-top:20px;margin-left:5px;" value=""/>
        </div>
        
        
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 $(document).ready(function(){    
    $("#filter_btn").click(function(){
        if($(".filter_input").val()!="")
        {
            $.post("/pageback/search",{name:$(".filter_input").val()},function(data){
                var d=eval("("+data+")");
                if(d.link==0)
                {
                    $("#result").val("不存在");
                    $("#edit_btn").css("display","none");
                    $("#delete_btn").css("display","none");
                    $("#add_btn").css("display","block");
                }
                else
                {
                    $(".filter_input").attr("name",d.id);
                    $("#result").val(d.link);
                    $("#edit_btn").css("display","block");
                    $("#delete_btn").css("display","block");
                    $("#add_btn").css("display","none");
                }
            });
        }
        else
        {
            $(".filter_input").focus();
        }
    });
    $(".filter_input").blur(function(){
        $("#result").val("");
        $("#edit_btn").css("display","none");
        $("#delete_btn").css("display","none");
        $("#add_btn").css("display","none");
    });
    $("#edit_btn").click(function(){
        submit("/pageback/edit",{name:$(".filter_input").val(),id:$(".filter_input").attr("name")});
    });
    $("#delete_btn").click(function(){
        window.location.href="/pageback/del/"+$(".filter_input").attr("name");
    });
    $("#add_btn").click(function(){
        submit("/pageback/edit",{name:$(".filter_input").val()});
    });
});
</script>
</body>
</html>