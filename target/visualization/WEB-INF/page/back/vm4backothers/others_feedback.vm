<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>网站反馈</title>
</head>
<body>
<div class="main">
   #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/webback/pic">网站信息</a></li>
            <li class="left_li"><div><a href="/webback/pic">图片信息管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/webback/page">页面管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/companyinfoback/index">公司介绍管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li_active"><div><a href="/consultback/2/1">网站反馈管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/consultback/0/1">业务咨询管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/consultback/1/1">其他咨询管理</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame">
        <div class="filterbox" >

            <span class="filter_itemname" >查询选项:</span>
            <select id="select" class="filter_input">
            	<option value="2" #if( ! ${data.containsKey("handle")} || ( ${data.containsKey("handle")} && ${data.get("key")} == 2))selected #end>全部</option>
            	<option value="0" #if(${data.containsKey("handle")} && ${data.get("key")} == 0) selected #end>未处理</option>
            	<option value="1" #if(${data.containsKey("handle")} && ${data.get("key")} == 1) selected #end>已处理</option>
            </select>
            <a class="filter_btn" >筛选</a>
        </div>
        <div style="clear:both"></div>
        <div class="listdiv">
            <ul class="listul">
            
            	 <li class="user_li">
                    <span class="name_title" style="width:150px;">日期</span>
                    <span class="name_title" style="width:150px;">联系方式</span>
                    <span class="delete_title">删除</span>
                    <span class="show_title">查看</span>
                    <span class="label_title" >标注</span>
                 </li>
                 #foreach($entity in ${data.get("consult")})
	                <li class="user_li" id="${entity.get("id")}">
	                    <span class="item_name" style="width:150px;overflow:hidden;" >${entity.get("date")}</span>
	                    <span class="item_name" style="width:150px;overflow:hidden;" >${entity.get("phone")}</span>
	                    <a  class="deletebtn">删除</a>
	                    <a  class="showbtn">查看</a>
	                    <a  class="labelbtn">#if(${entity.get("handle")} == 1)已处理#else未处理#end</a>
	                </li>
				 #end
            </ul>
        </div>
        <div style="clear:both"></div>
        <div class="twobpagetn">
			<a class="pagebtn_style" name="${data.get("pre")}"><img src="/img/prepage_pic_03.png"><span>上一页</span></a>
            <a class="pagebtn_style" name="${data.get("next")}"><span>下一页</span><img src="/img/nextpage_pic_03.png"></a>
        </div>
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
</div>
<div class="mask"></div>
<div class="back1">
#parse("feedback_div.vm")
<img src="">
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 $(document).ready(function(){
    nav_active=8;
    change2active($(".nav_li").eq(nav_active));
    $(".filter_btn").click(function(){
        submit("/consultback/2/1",{key:$(".filter_input").val(),handle:$("#select").val()});
    });
    $(".showbtn").click(function(){
        $.post("/consultback/feedback/"+$(this).parent().attr("id"),{},function(data){
            $(".back1").html(data);
            $(".mask").fadeIn("fast");
            $(".back1").fadeIn("fast").css("top",($(document).scrollTop()+($(window).height()-$(".back1").height())/2)+"px");
        });
    });
    $(".deletebtn").click(function(){
        window.location.href="/consultback/delete/2/"+$(this).parent().attr("id");
    });
    $(".labelbtn").click(function(){
        window.location.href="/consultback/handle/2/"+$(this).parent().attr("id");
    });
    $(".mask").css("height",$(document).height()+20+"px");
    $(".back1").css({"top":"300px","left":($(document).width()-$(".back1").width())/2+"px"});
    $(".mask").click(function(){
        $(".mask").fadeOut("fast");
        $(".back1").fadeOut("fast");
    });
    $(".twobpagetn a").click(function(){
        if($(this).attr("name")!="0")
            window.location.href="/consultback/2/"+$(this).attr("name");
    });
    if($(".twobpagetn a").eq(0).attr("name")!="0")
    {
        $(".twobpagetn a").eq(0).removeClass("pagebtn_style").addClass("pagebtn_style_active");
    }
    if($(".twobpagetn a").eq(1).attr("name")!="0")
    {
        $(".twobpagetn a").eq(1).removeClass("pagebtn_style").addClass("pagebtn_style_active");
    }
});
</script>
</body>
</html>