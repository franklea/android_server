<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link type="text/css" rel="stylesheet" href="/css/webbackcss.css"/>
<title>图片信息管理</title>
</head>
<body>
<div class="main">
   #parse("backheader.vm")
    <!--左边框-->
    <div class="left_frame">
        <ul class="left_ul">
            <li class="left_title"><a href="/webback/pic">网站信息</a></li>
            <li class="left_li_active"><div><a href="/webback/pic">图片信息管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/webback/page">页面管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/companyinfoback/index">公司介绍管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/consultback/2/1">网站反馈管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/consultback/0/1">业务咨询管理</a><span></span><div style="clear:both;"></div></div></li>
            <li class="left_li"><div><a href="/consultback/1/1">其他咨询管理</a><span></span><div style="clear:both;"></div></div></li>
        </ul>
        <div style="clear:both"></div>
    </div>
    
    
    <!--右边框-->
    <div class="right_frame">
        
        <span class="filter_itemname" style="line-height:25px;">网站logo:</span>
        <div style="float:left;">
        <input readonly id="logopic" class="filter_input" style="width:320px;"  value="${data.get("logo").get("picPath")}"/>
        <input id="showlogo" type="button" class="submit_btn" value="预览"/>
        <input id="editlogo" type="button" class="submit_btn" value="修改"/>
        </div>
        <div style="clear:both;height:30px;"></div>

		<span class="filter_itemname" style="line-height:25px;">置顶图片:</span>
		<input id="addtitle" type="button" class="submit_btn"  style="width:110px;margin-left:5px;text-align:center" value="添加置顶图片"/>
		<div style="clear:both;"></div>
        <div class="listdiv">
            <ul class="listul">
            	 <li class="user_li">
                    <span class="name_title">地址</span>
                    <span class="delete_title">删除</span>
                    <span class="edit_title">修改</span>
                    <span class="show_title">预览</span>
                 </li>
				#foreach($pic in ${data.get("titlePic")})
	                <li class="user_li" id="${pic.get("picId")}">
	                    <span class="item_name" >${pic.get("picPath")}</span>
	                    <a  class="deletebtn">删除</a>
	                    <a class="editbtn">修改</a>
	                    <a class="showbtn">预览</a>
	                </li>
                #end
               
            </ul>
        </div>
        
        <div style="clear:both;height:30px;"></div>

		<span class="filter_itemname" style="line-height:25px;">底部图片:</span>
		<input id="addbase" type="button" class="submit_btn"  style="width:110px;margin-left:5px;text-align:center" value="添加底部图片"/>
		<div style="clear:both;"></div>
        <div class="listdiv">
            <ul class="listul">
            	 <li class="user_li">
                    <span class="name_title">地址</span>
                    <span class="delete_title">删除</span>
                    <span class="edit_title">修改</span>
                    <span class="show_title">预览</span>
                 </li>
				#foreach($pic in ${data.get("basePic")})
	                <li class="user_li" id="${pic.get("picId")}">
	                    <span class="item_name" >${pic.get("picPath")}</span>
	                    <a  class="deletebtn">删除</a>
	                    <a  class="editbtn">修改</a>
	                    <a class="showbtn">预览</a>
	                </li>
                #end
               
            </ul>
        </div>
        <div style="clear:both"></div>
    </div>
    <div style="clear:both"></div>
</div>
<div class="mask"></div>
<div class="back1">
<img src="">
</div>
<script type="text/javascript" src="/js/jquery-2.0.2.js"></script>
<script type="text/javascript" src="/js/webbackjs.js"></script>  
<script>
 $(document).ready(function(){    
    nav_active=8;
    change2active($(".nav_li").eq(nav_active));  
    $(".editbtn").click(function(){
        window.location.href="/webback/pic/"+$(this).parent().attr("id");
    });
    $(".deletebtn").click(function(){
        window.location.href="/webback/picdel/"+$(this).parent().attr("id");
    });
    $(".showbtn").click(function(e){
            $(".mask").fadeIn("fast");
            $(".back1 img").attr("src",$(this).parent().find("span").text());
            $(".back1").fadeIn("fast");
    });
    $("#showlogo").click(function(){
        $(".mask").fadeIn("fast");
        $(".back1").fadeIn("fast");
        $(".back1 img").attr("src",$("#logopic").val());
    });
    $(".back1 img").load(function(){
        $(".mask").css("height",$(document).height()+20+"px");
        $(".back1").css({"top":($(document).scrollTop()+($(window).height()-$(".back1").height())/2)+"px","left":($(document).width()-$(this).width())/2+"px"});
    });
    $(".mask").click(function(){
        $(".mask").fadeOut("fast");
        $(".back1").fadeOut("fast");
    });
    $("#editlogo").click(function(){
        window.location.href="/webback/logo";
    });
    $("#addtitle").click(function(){
        window.location.href="/webback/pictitle";
    });
    $("#addbase").click(function(){
        window.location.href="/webback/picbase";
    });
});
</script>
</body>
</html>